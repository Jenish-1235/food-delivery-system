# Environment Configuration
# Options: local, debug, dev, staging, prod
ENVIRONMENT=local
SPRING_PROFILES_ACTIVE=${ENVIRONMENT}

# Application Configuration
APP_NAME=food-delivery-system
APP_PORT=8080

# Database Configuration
DB_NAME=fooddelivery
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/fooddelivery
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Kafka Configuration
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SPRING_KAFKA_GROUP_ID=food-delivery-group

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=redispassword
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# JWT Configuration
# IMPORTANT: Generate a secure random secret for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-in-production-minimum-32-characters-long
JWT_EXPIRATION=900000

# Spring Boot Configuration
SPRING_APPLICATION_NAME=food-delivery-system
SPRING_JPA_SHOW_SQL=false